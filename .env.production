# Production Environment Variables for ACADMATE Backend

# Database Configuration
DATABASE_URL="postgresql://username:password@hostname:port/database_name"

# JWT Configuration
JWT_SECRET="your-super-secure-production-jwt-secret-key-2024"

# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Configuration
FRONTEND_URL="https://your-netlify-site.netlify.app"
ALLOWED_ORIGINS="https://your-netlify-site.netlify.app,https://your-custom-domain.com"

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR="/tmp/uploads"

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE=30000
DB_POOL_ACQUIRE=60000

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN="24h"
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="/var/log/acadmate.log"